{
  "name": "btp-connect",
  "version": "0.1.0",
  "description": "BTP Connect - Electron standalone",
  "author": "BTP Connect",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder --win --x64"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.btpconnect.app",
    "productName": "BTP Connect",
    "asar": true,
    "directories": { "output": "dist" },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "package.json"
    ],
    "win": { "target": ["nsis"] }
  }
}